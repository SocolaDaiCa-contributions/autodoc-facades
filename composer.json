{
    "name": "stevebauman/autodoc-facades",
    "description": "Auto-generate PHP doc annotations for Laravel facades",
    "keywords": [
        "autodoc",
        "document",
        "annotate",
        "facades",
        "facade"
    ],
    "homepage": "https://github.com/stevebauman",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/stevebauman/autodoc-facades/issues",
        "source": "https://github.com/stevebauman/autodoc-facades"
    },
    "authors": [
        {
            "name": "Steve Bauman",
            "email": "steven_bauman@outlook.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "laravel/facade-documenter": "dev-main",
        "lorisleiva/lody": "^0.4.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20"
    },
    "autoload": {
        "psr-4": {
            "Stevebauman\\AutodocFacades\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stevebauman\\AutodocFacades\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": {
        "facade-documenter": {
            "type": "vcs",
            "url": "git@github.com:laravel/facade-documenter.git"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/pint"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    }
}
